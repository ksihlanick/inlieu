<div id="payment">
  <h1>Thanks for your donation</h1>
</div>

<div>
      <ul>
        <li>
          name: <%= @payment.name %>
        </li>
        <li>
          receiving event: <%= @payment.event.name %>
        </li>
        <li>
          donation: <%= number_to_currency(@payment.money_raised/100) %>
        </li>
        <li>
          email: <%= @payment.email %>
        </li>
      </ul>
</div>

<p> <%= link_to 'back to event', event_path(@payment.event.id) %> </p>
